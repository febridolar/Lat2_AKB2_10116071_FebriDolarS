<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40B4E7"
    tools:context=".Verify">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="144dp"
        android:text="Verify your Account"
        android:textColor="#feff"
        android:textSize="35dp"
        android:textStyle="normal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="197dp"
        android:text="We have send verification code to your email"
        android:textColor="#feff"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp" />

    <EditText
        android:id="@+id/editText13"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#ffff"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="enter verification code here..."
        android:textColor="#ffff"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="326dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button1"
        android:text="SEND"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="251dp"
        android:text="doesn't get the code?"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="251dp"
        android:text="Resend"
        android:textColor="#ffff"
        android:textStyle="bold" />
</RelativeLayout>